<?xml version="1.0"?>
<tryton>
    <data>
        <!-- task.configuration -->
        <record model="ir.ui.view" id="task_configuration_view_form">
            <field name="model">task.configuration</field>
            <field name="type">form</field>
            <field name="name">configuration_form</field>
        </record>

        <record model="ir.action.act_window"
            id="act_task_configuration_form">
            <field name="name">Configuration</field>
            <field name="res_model">task.configuration</field>
        </record>
        <record model="ir.action.act_window.view"
            id="act_task_configuration_form_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="task_configuration_view_form"/>
            <field name="act_window" ref="act_task_configuration_form"/>
        </record>

        <menuitem
            parent="menu_tasks"
            action="act_task_configuration_form"
            sequence="5"
            id="menu_task_configuration"
            icon="tryton-settings"/>
    </data>
</tryton>